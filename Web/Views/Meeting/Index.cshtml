@model List<Meeting>
<div class="container ">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Meeting List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Meeting" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Meeting
            </a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        StartTime
                    </th>
                    <th>
                        EndTime
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        FileURL
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>@obj.Id</td>
                        <td>@obj.Name</td>
                        <td>@obj.StartTime</td>
                        <td>@obj.EndTime</td>
                        <td class="p-0 pt-3" style="max-width: 20rem; max-height:10rem; overflow: auto;">
                            <div class="p-0 m-0" style="max-height: 10rem; overflow-y: auto;">@obj.Description</div>
                        </td>
                        <td>@obj.DocumentURL</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Meeting" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Meeting" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
            
                }
            </tbody>
        </table>
    </div>
</div>